<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nikoc.montyhallwiththoms.doorSelector_1">

    <ImageButton
        android:id="@+id/door1"
        android:layout_width="124dp"
        android:layout_height="256dp"
        android:layout_marginTop="7dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prompt"
        app:srcCompat="@drawable/close" />

    <ImageButton
        android:id="@+id/door2"
        android:layout_width="136dp"
        android:layout_height="267dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="7dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toEndOf="@+id/door1"
        app:layout_constraintTop_toBottomOf="@+id/prompt"
        app:srcCompat="@drawable/close" />

    <ImageButton
        android:id="@+id/door3"
        android:layout_width="124dp"
        android:layout_height="260dp"
        android:layout_marginTop="7dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toEndOf="@+id/door2"
        app:layout_constraintTop_toBottomOf="@+id/prompt"
        app:srcCompat="@drawable/close" />

    <TextView
        android:id="@+id/prompt"
        android:layout_width="367dp"
        android:layout_height="96dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif"
        android:text="@string/door1_text"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.Compat.Notification.Title.Media"
        android:textColor="@android:color/background_dark"
        android:textSize="32sp"
        android:typeface="serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_restart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="148dp"
        android:layout_marginTop="35dp"
        android:text="Restart"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/door2" />
</android.support.constraint.ConstraintLayout>